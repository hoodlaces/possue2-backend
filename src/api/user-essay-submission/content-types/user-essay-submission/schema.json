{
  "kind": "collectionType",
  "collectionName": "user_essay_submissions",
  "info": {
    "singularName": "user-essay-submission",
    "pluralName": "user-essay-submissions",
    "displayName": "User Essay Submission",
    "description": "User-submitted essays for review and potential publication"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "users-permissions": {
      "authenticatedUser": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "submissionType": {
      "type": "enumeration",
      "enum": ["essay", "practice-question", "case-study", "analysis"],
      "default": "essay",
      "required": true
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "userSubmissions"
    },
    "submitterName": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "submitterEmail": {
      "type": "email",
      "required": true
    },
    "submitterYear": {
      "type": "enumeration",
      "enum": ["FirstYear", "SecondYear", "ThirdYear", "Graduate", "Attorney", "Other"],
      "required": true
    },
    "lawSchool": {
      "type": "string",
      "maxLength": 200
    },
    "graduationYear": {
      "type": "integer",
      "min": 1900,
      "max": 2050
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "under-review", "approved", "rejected", "needs-revision"],
      "default": "pending",
      "required": true
    },
    "moderationNotes": {
      "type": "text",
      "private": true
    },
    "reviewedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "private": true
    },
    "reviewedAt": {
      "type": "datetime",
      "private": true
    },
    "rejectionReason": {
      "type": "enumeration",
      "enum": [
        "inappropriate-content",
        "poor-quality",
        "duplicate",
        "off-topic",
        "copyright-violation",
        "other"
      ]
    },
    "rejectionDetails": {
      "type": "text"
    },
    "originalScore": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "barExamDate": {
      "type": "date"
    },
    "isAnonymous": {
      "type": "boolean",
      "default": false
    },
    "agreedToTerms": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "publishingConsent": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "featuredSubmission": {
      "type": "boolean",
      "default": false,
      "private": true
    },
    "submissionDate": {
      "type": "datetime",
      "default": "now"
    },
    "ipAddress": {
      "type": "string",
      "private": true
    },
    "userAgent": {
      "type": "string",
      "private": true
    }
  }
}