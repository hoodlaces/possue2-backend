{
  "kind": "collectionType",
  "collectionName": "user_rules",
  "info": {
    "singularName": "user-rule",
    "pluralName": "user-rules",
    "displayName": "User Rule",
    "description": "Custom legal rules created by users for study purposes"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "subject": {
      "type": "enumeration",
      "enum": [
        "agency-and-partnership",
        "business-associations",
        "civil-procedure",
        "community-property",
        "constitutional-law",
        "contracts",
        "criminal-law",
        "criminal-procedure",
        "evidence",
        "professional-responsibility",
        "real-property",
        "remedies",
        "torts",
        "wills-and-trusts"
      ],
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "default": "medium"
    },
    "tags": {
      "type": "text",
      "maxLength": 500
    },
    "isPublic": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "userRules"
    }
  }
}